<div class="container text-center border border-primary rounded p-4">
  <div class="logo_container">
    <h1 class="logo">Budget App</h1>
    <%= image_tag 'budget_logo', alt: 'Logo', class: 'img-fluid' %>
  </div>
</div>

<section class="sign_section mt-4">
  <% if current_user %>
    <div class="welcome_user">
      <p class="user_greeting">Hello <%= current_user.name.capitalize %></p>
      <h2 class="welcome_message">Welcome to the Best Budget App</h2>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-small btn-primary mx-2" %>
    </div>
  <% else %>
    <%= link_to 'Log In', new_user_session_path, class: 'log_in btn btn-outline-primary mx-2' %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'sign_up btn btn-outline-primary mx-2' %>
  <% end %>
</section>
